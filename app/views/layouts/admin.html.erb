<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel of TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'admin/tip' %>
  <%= render 'shared/flash', type: :alert %>
  <div class = 'content'>
    <%= yield %>
  </div>  
  <%= render 'shared/flash', type: :notice %>
  </body>

  <div class = 'footer'>
    <%= render 'shared/footer' %>
  </div>
</html>

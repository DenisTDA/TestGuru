<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class = 'aut_nav'>
    <%= link_to "Project TetsGuru", tests_path %>
    <% if logged_in?%>
      <%= link_to "Sign up", signup_path %> |
      <%= link_to "Log in", login_path %> |
      <%= link_to "Log out", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Sign in", signup_path %> |
      <%= link_to "Log in", login_path %> 
    <% end %>
  </div>

  <% if logged_in? %>
    <p class = 'welcome user'> Welcome, <b><%= current_user.name.capitalize %></b> Guru!</p>
  <% end %>

  <div class = 'content'>
    <%= yield %>
  </div>  
  </body>

  <div class = 'footer'>
    <%= render 'shared/footer' %>
  </div>
</html>

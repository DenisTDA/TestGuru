<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
    <p class = 'nav user'> Welcome, <b><%= current_user.name.capitalize %></b> Guru</p>
  <% end %>

  <div class = 'content'>
    <%= yield %>
  </div>  
  </body>

  <div class = 'footer'>
    <%= render 'shared/footer' %>
  </div>
</html>

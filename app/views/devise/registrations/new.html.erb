<div class='row justify-content-center mt-3' >
  <div class="col col-md-4">
    <h2><%= t('.header') %></h2>

    <div class='card border-primary'>
      <div class='card-body'>  
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">

            <% if resource.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <%= render "devise/shared/error_messages", resource: resource %>
              </div>
            <% end %>

            <p>
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
            </p>

            <p>
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
            </p>


            <p>
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </p>

            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'check-password form-control' %>
            </p>

            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'check-password form-control' %>
              <%= octicon 'shield-check', height: 24, class: 'text-success hide' %>
              <%= octicon 'shield-x', height: 24, class: 'text-danger hide' %>
            </p>

            <div class="actions">
              <%= f.submit class: 'btn btn-primary mt-2' %>
            </div>

          </div>  
        <% end %>
      </div>
    </div>

    <div class='mt-2'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class='row justify-content-center'>
  <div class='col-12'>
    <h1 class="text-center"><%= t('.header') %></h1>

    <table data-table="tests" class="table table-secondary table-striped  table-sm" >
      <thead>
        <tr class="table-dark text-center">
          <th scope="col" style="width: 60%" class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'chevron-up', height:24, class: 'text-light hide' %>
            <%= octicon 'chevron-down', height:24,  class: 'text-light hide' %>
          </th>
          <th scope="col" style="width: 10%"><%= t('.level') %></th>
          <th scope="col" style="width: 10%" class="sort-by-ques pointer">
            <%= t('.questions') %>
            <%= octicon 'fold-up', height:24, class: 'text-light hide' %>
            <%= octicon 'fold-down', height:24,  class: 'text-light hide' %>
          </th>    
          <th scope="col" style="width: 15%"><%= t('.action') %></th>
        </tr> 
      </thead>

      <tbody>
        <%= render @tests %>
      </tbody>
    </table>

  </div>
</div>


<div class='row text-center'>
  <div class='col-12'>
    <h1 class="text-center"><%= t('.header') %></h1>

    <table class="table table-secondary table-striped table-sm" >
      <tr class="table-dark text-center">
        <th scope="col" style="width: 60%" class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'chevron-up', class: 'text-success hide' %>
          <%= octicon 'chevron-down', class: 'text-success hide' %>
        </th>
        <th scope="col" style="width: 10%"><%= t('.level') %></th>
        <th scope="col" style="width: 10%"><%= t('.questions') %></th>    
        <th scope="col" style="width: 15%"><%= t('.action') %></th>
      </tr> 
      <%= render @tests %>
    </table>

  </div>
</div>


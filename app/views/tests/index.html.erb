<h1>List of Tests</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Count of Questions</th>
    <th>Level</th>
    <th colspan = '3'> Action</th>
  </tr> 

  <tr>
  <% @tests.each do |test| %>
    <td><%= "#{test.title}" %></td> 
    <td> <%= " #{test.questions.count}" %></td> 
    <td><%= " #{test.level}" %>

    <td><%= link_to "Show", test_path(test) %> </td> 
    <td>| <%= link_to "Edit", edit_test_path(test) %> </td> 
    <td>| <%= link_to "Delete", test_path(test), method: 'delete', data: { confirm: 'Are you shure?' } %> </td> 
  </tr>
  <% end %>
</table>

<p>
  <%= link_to 'Create new Test', new_test_path%> 
</p>
